             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="110.717" d:DesignWidth="387.849"
             Height="128">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="128" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Image Grid.Column="0" Name="_image" x:FieldModifier="private" />
        <Label Grid.Column="1" Content="(テキスト)" VerticalContentAlignment="Center" Name="_label" x:FieldModifier="private" />
    </Grid>
